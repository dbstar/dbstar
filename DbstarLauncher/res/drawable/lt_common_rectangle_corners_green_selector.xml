<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- 
            <solid android:color="@color/bg_blue" />
             -->
            <stroke android:width="25dp" android:color="@color/bg_green" />
            <corners 
                android:bottomLeftRadius="0.05dp"
                android:bottomRightRadius="0.05dp"
                android:topLeftRadius="0.05dp"
                android:topRightRadius="0.05dp"/>
            <padding android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp"/>
            </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke android:width="40dp" android:color="@color/transparent_white" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!--             
            <solid android:color="#00000000" />
             -->
            <stroke android:width="40dp" android:color="@color/transparent_white" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>