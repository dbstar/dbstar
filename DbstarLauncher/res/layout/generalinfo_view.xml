<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_background" >

    <RelativeLayout
        android:id="@+id/view_header"
        android:layout_width="fill_parent"
        android:layout_height="108dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" >

        <!--
             <ImageView
            android:layout_width="269dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo_dbstar" />
        -->

        <TextView
            android:id="@+id/pageNumberView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1186dp"
            android:layout_marginTop="80dp"
            android:gravity="top|center_horizontal"
            android:textColor="#ffffff"
            android:textSize="@dimen/gl_text_size_18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="494dp"
            android:layout_height="364dp"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:gravity="left|center_vertical"
                android:text="@string/product_info"
                android:textColor="#000000"
                android:textSize="@dimen/gl_text_size_24sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/device_serialnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/deviceinfo_device_serialnumber"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_22sp" />

                <TextView
                    android:id="@+id/device_hardwaretype"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/deviceinfo_hardware_type"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_22sp" />

                <TextView
                    android:id="@+id/device_softwareversion"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/deviceinfo_software_version"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_22sp" />

                <TextView
                    android:id="@+id/device_loaderversion"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/deviceinfo_loader_version"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_22sp" />

                <TextView
                    android:id="@+id/device_macaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/deviceinfo_mac_address"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_22sp" />
                
                <TextView
                    android:id="@+id/upgrade_count"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/upgrade_count"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_22sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="494dp"
            android:layout_height="364dp"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:gravity="left|center_vertical"
                android:text="@string/disk_info"
                android:textColor="#000000"
                android:textSize="@dimen/gl_text_size_24sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/disk_totalsize"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/disk_totalsize"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_22sp" />

                <TextView
                    android:id="@+id/disk_usedsize"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/disk_usedsize"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_22sp" />

                <TextView
                    android:id="@+id/disk_spacesize"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/disk_spacesize"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_22sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

   <include
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       layout="@layout/footerview" />

</RelativeLayout>