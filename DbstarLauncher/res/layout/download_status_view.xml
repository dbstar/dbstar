    <ListView
        android:id="@+id/download_view"
        android:layout_width="1100dp"
        android:layout_height="480dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="138dp"
        android:cacheColorHint="#00000000"
        android:divider="@android:color/transparent"
        android:dividerHeight="4.0dp"
        android:gravity="top"
        android:listSelector="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/info_view"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="90dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="0dp"
            android:gravity="left|center_vertical"
            android:text="@string/receivestatus_diskspace"
            android:textColor="#ffffff"
            android:textSize="@dimen/gl_text_size_20sp" />

        <TextView
            android:id="@+id/disk_info"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"
            android:textSize="@dimen/gl_text_size_20sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="20dp"
            android:gravity="left|center_vertical"
            android:text="@string/receivestatus_downloadspeed"
            android:textColor="#ffffff"
            android:textSize="@dimen/gl_text_size_20sp" />

        <TextView
            android:id="@+id/download_speed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="20dp"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"
            android:textSize="@dimen/gl_text_size_20sp" />

        <TextView
            android:id="@+id/signal_status"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="0dp"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"
            android:textSize="@dimen/gl_text_size_20sp" />
        
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/download_items"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="20dp"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"
            android:textSize="@dimen/gl_text_size_20sp" />

        <TextView
            android:id="@+id/download_pages"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="20dp"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"
            android:textSize="@dimen/gl_text_size_20sp" />
