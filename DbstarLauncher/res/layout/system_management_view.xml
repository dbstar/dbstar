<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_background" >
    
    <RelativeLayout
        android:id="@+id/view_header"
        android:layout_width="fill_parent"
        android:layout_height="108dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:focusable="false" >

        <!--
        <ImageView
            android:layout_width="269dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo_dbstar" />
        -->

        <TextView
            android:id="@+id/pageNumberView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1186dp"
            android:layout_marginTop="80dp"
            android:focusable="false"
            android:gravity="top|center_horizontal"
            android:textColor="#ffffff"
            android:textSize="@dimen/gl_text_size_20sp" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="1180dp"
        android:layout_height="556dp"
        android:layout_below="@id/view_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@drawable/bg_white" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/restore_checker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:clickable="false"
                android:focusable="true"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:text="@string/restore_factory_settings_title"
                android:textColor="#000000"
                android:textSize="@dimen/gl_text_size_20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:focusable="false"
                android:text="@string/restore_factory_settings_desc"
                android:lines="2"
                android:textColor="#000000"
                android:textSize="@dimen/gl_text_size_20sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/clear_purchase_checker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:clickable="false"
                android:focusable="true"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:text="@string/clear_purchase_info_title"
                android:textColor="#000000"
                android:textSize="@dimen/gl_text_size_20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:focusable="false"
                android:text="@string/clear_purchase_info_desc"
                android:textColor="#000000"
                android:textSize="@dimen/gl_text_size_20sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/format_disk_checker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:clickable="false"
                android:focusable="true"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:text="@string/format_disk_title"
                android:textColor="#000000"
                android:textSize="@dimen/gl_text_size_20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:focusable="false"
                android:text="@string/format_disk_desc"
                android:textColor="#000000"
                android:textSize="@dimen/gl_text_size_20sp" />
        </LinearLayout>
 
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:focusable="false"
                android:text="@string/alert_info_1"
                android:textColor="#000000"
                android:textSize="@dimen/gl_text_size_20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:focusable="false"
                    android:gravity="left|center_vertical"
                    android:text="@string/alert_info_2"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_20sp" />

                <TextView
                    android:id="@+id/security_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:focusable="false"
                    android:gravity="left|center_vertical"
                    android:text="@string/demo_security_code"
                    android:textColor="#ff1000"
                    android:textSize="23sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:focusable="false"
                    android:gravity="left|center_vertical"
                    android:text="@string/alert_info_3"
                    android:textColor="#000000"
                    android:textSize="@dimen/gl_text_size_20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/security_code_editor"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:background="@drawable/textview_bgselector"
                android:inputType="number|text"
                android:scrollHorizontally="true"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/okbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:text="@string/button_text_ok"
                    android:textSize="@dimen/gl_text_size_20sp" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/cancelbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:text="@string/button_text_cancel"
                    android:textSize="@dimen/gl_text_size_20sp" />
            </LinearLayout>
        </LinearLayout>
    
    </LinearLayout>
    
    <include
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/footerview" />

</RelativeLayout>