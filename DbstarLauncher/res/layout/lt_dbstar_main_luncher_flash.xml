<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bk"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
        <com.dbstar.app.components.FlashGallery
            android:id="@+id/flash_gallery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <!--         
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loading"
            android:visibility="gone"/>
    </FrameLayout>
         -->

    <LinearLayout
        android:id="@+id/flash_btn_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical" >

<!--                 android:background="@drawable/lt_dbstar_bg_commonbtn_selector" -->

            <ImageView
                android:id="@+id/flash_startv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/lt_dbstar_bg_commonbtn_selector"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/flash_cntv_img"
                android:nextFocusLeft="@+id/flash_setting_img"
                android:src="@drawable/star_tv" />

            <TextView
                android:id="@+id/flash_startv_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/lt_page_launcher_startv"
                android:textColor="#ffffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/flash_cntv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/lt_dbstar_bg_commonbtn_selector"
                android:clickable="true"
                android:focusable="true"
                android:nextFocusRight="@+id/flash_appshop_img"
                android:src="@drawable/cntv" />

            <TextView
                android:id="@+id/flash_cntv_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/lt_page_launcher_cntv"
                android:textColor="#ffffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/flash_appshop_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/lt_dbstar_bg_commonbtn_selector"
                android:clickable="true"
                android:focusable="true"
                android:nextFocusRight="@+id/flash_myapp_img"
                android:src="@drawable/app_shop" />

            <TextView
                android:id="@+id/flash_appshop_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/lt_page_launcher_appshop"
                android:textColor="#ffffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/flash_myapp_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/lt_dbstar_bg_commonbtn_selector"
                android:clickable="true"
                android:focusable="true"
                android:nextFocusRight="@+id/flash_setting_img"
                android:src="@drawable/my_apps" />

            <TextView
                android:id="@+id/flash_myapp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/lt_page_launcher_myapp"
                android:textColor="#ffffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/flash_setting_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/lt_dbstar_bg_commonbtn_selector"
                android:clickable="true"
                android:focusable="true"
                android:nextFocusRight="@id/flash_startv_img"
                android:src="@drawable/setting" />

            <TextView
                android:id="@+id/flash_setting_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/lt_page_launcher_settings"
                android:textColor="#ffffffff"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>