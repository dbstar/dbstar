<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="394dp"
    android:layout_height="267dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_wifi_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|left"
        android:textColor="@color/text_white"
        android:visibility="gone" />

    <!-- 
        android:layout_marginTop="20dp"
     -->
    <LinearLayout
        android:id="@+id/dialog_wifi_password_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@id/dialog_wifi_name"
        android:gravity="center_vertical|left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_wifi_txt_password "
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:text="@string/dialog_password"
            android:textSize="@dimen/gl_text_size_22sp" />

        <EditText
            android:id="@+id/dialog_wifi_et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/lt_common_textview_bg_selector"
            android:inputType="textPassword"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- 
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
     -->
    <CheckBox
        android:id="@+id/dialog_wifi_cb_show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/gl_text_size_22sp"
        android:layout_below="@id/dialog_wifi_password_container"
        android:text="@string/dialog_show_password" />

    <LinearLayout
        android:id="@+id/dialog_wifi_btn_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/dialog_wifi_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/lt_common_button_seletor"
            android:text="@string/dialog_txt_ok"
            android:textColor="@color/text_white"
            android:textSize="@dimen/gl_text_size_22sp" />

        <Button
            android:id="@+id/dialog_wifi_btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/lt_common_button_seletor"
            android:text="@string/dialog_txt_cancel"
            android:textColor="@color/text_white"
            android:textSize="@dimen/gl_text_size_22sp" />
    </LinearLayout>

</RelativeLayout>