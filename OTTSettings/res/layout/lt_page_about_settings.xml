                android:id="@+id/about_settings_txt_hardware"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_vertical|right"
                android:text="@string/page_about_hardware_version"
                android:textColor="@color/text_white"
                android:textSize="@dimen/gl_text_size_24sp" />

            <TextView
                android:id="@+id/about_settings_hardware_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical|left"
                android:textColor="@color/text_white"
                android:textSize="@dimen/gl_text_size_24sp" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TableRow
            android:id="@+id/about_settings_software_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp" >

