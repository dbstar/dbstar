<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wried_settings_container"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/wifi_settings_btn_checkWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
       		android:layout_marginBottom="5dp"
            android:focusable="true"
            android:text="@string/page_wifi_checkWifi"
            android:textColor="@color/text_white"
            android:textSize="@dimen/gl_text_size_24sp" />

        <CheckBox
            android:id="@+id/wifi_settings_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/lt_common_checkbox_selector"
            android:button="@null"
            android:checked="true" />
        
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/wifi_settings_btn_checkWifi"
        android:background="?android:attr/listDivider" />
    </RelativeLayout>


    <ListView
        android:id="@+id/wifi_settings_listView"
        android:layout_width="480dp"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:cacheColorHint="@color/transparent"
        android:clipToPadding="false"
        android:divider="#00000000"
        android:dividerHeight="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:drawSelectorOnTop="false"
        android:listPreferredItemHeight="48dp"
        android:listSelector="#00000000"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideOverlay" />

    <include
        android:id="@+id/wifi_settings_empty_placeholder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top|center_horizontal"
        layout="@layout/lt_common_empty_placeholder"
        android:visibility="gone" />

</LinearLayout>