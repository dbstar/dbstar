<?xml version="1.0" encoding="UTF-8"?>

<!-- 现在只有switchButton用到 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <gradient android:angle="270" android:endColor="#cd0008" android:startColor="#b9010e" />

            <stroke android:width="1dip" android:color="#a80101" />

            <padding android:bottom="1dip" android:left="1dip" android:right="1dip" android:top="1dip" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <gradient android:angle="90" android:endColor="#cd0008" android:startColor="#b9010e" />

            <stroke android:width="1dip" android:color="#a80101" />

            <padding android:bottom="1dip" android:left="1dip" android:right="1dip" android:top="1dip" />
        </shape></item>

</selector>