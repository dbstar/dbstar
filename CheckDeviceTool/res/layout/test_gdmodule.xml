<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <TextView 
        style="@style/TestTextView"
        android:id="@+id/order"
        />
    <TextView 
         android:id="@+id/name"
        style="@style/TestTextView"
        android:text="@string/test_gdmodule"
        android:layout_marginLeft="10dp"
        />
    <ProgressBar
        android:id="@+id/test_pb" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        />
        <TextView 
            style="@style/TestTextView"
            android:id="@+id/test_disk_sda1_statu"
            android:layout_marginLeft="50dp"
            />
        
      <TextView 
          android:id="@+id/test_fail_reason"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#ff0000"
          android:textSize="15sp"
          android:text="@string/test_trun_off_ele"
          android:layout_marginLeft="50dp"
          />
      
      <Button 
          android:id="@+id/turn_off"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/test_turn_off"
          android:layout_marginLeft="10dp"
          android:visibility="gone"
          />
</LinearLayout>