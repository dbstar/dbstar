<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/magazine_article_content_container"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reader_view_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="548dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="95dp"
        android:focusable="false"
	    android:background="@drawable/magazine_background"
        android:focusableInTouchMode="false" >

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="545dp" >

            <LinearLayout
                android:id="@+id/content_list_containter"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical" >

                <com.dbstar.multiple.media.widget.AlwaysMarqueeTextView
                    android:id="@+id/current_magazine_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxWidth="130dp"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:textSize="22px"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/magazine_total_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20px" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/magazine_content_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/content_list"
                    android:textColor="#FFFFFF"
                    android:textSize="20px" />
            </LinearLayout>

            <ListView
                android:id="@+id/magazine_article_title_list"
                android:layout_width="800dp"
                android:layout_height="390dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="20dp"
                android:cacheColorHint="#00000000"
                android:focusable="true"
                android:divider="@null"
                android:fadeScrollbars="false"
                android:layout_below="@+id/content_list_containter"
                android:listSelector="@drawable/magazine_article_item_selector_bg"
                android:nextFocusRight="@+id/magazine_scroll_content_view"
                android:paddingRight="20dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbarThumbVertical="@drawable/newspaper_scrollbar_thumb"
                android:scrollbarTrackVertical="@drawable/newspaper_scrollbar_track" >
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/magazine_article_pic_loading_bar"
            android:layout_width="345dp"
            android:layout_height="515dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="15dp"
            android:gravity="center" >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/newspaper_loading_bg" />
        </RelativeLayout>

        <RelativeLayout 
            android:layout_width="726dp"
            android:layout_marginLeft="406dp"
            android:background="#fff"
            android:layout_height="wrap_content">
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.dbstar.multiple.media.widget.AlwaysMarqueeTextView
                android:id="@+id/magazine_article_title"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="10dp"
	            android:background="#D4D0C8"
                android:singleLine="true"
                android:textColor="#1900D3"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/magazine_voice_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/magazine_voice" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/magazine_parse_content_bar"
            android:layout_width="726dp"
            android:layout_height="400dp"
            android:layout_marginTop="90dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center" >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/newspaper_loading_bg" />
        </RelativeLayout>

        <!-- android:background="@drawable/jiantou_down_press" -->

        <ScrollView
            android:id="@+id/magazine_scroll_content_view"
            android:layout_width="726dp"
            android:layout_height="450dp"
            android:layout_marginTop="50dp"
            android:fadeScrollbars="false"
            android:background="#fff"
            android:scrollbarThumbVertical="@drawable/newspaper_scrollbar_thumb"
            android:scrollbarTrackVertical="@drawable/newspaper_scrollbar_track" >

            <com.dbstar.multiple.media.widget.NewsPaperContentView
                android:id="@+id/magazine_contentView"
                android:layout_width="700dp"
                android:layout_height="0dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </ScrollView>
        </RelativeLayout>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dbstar_toolbar_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="60dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_icon_main" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="@string/periodcial"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:id="@+id/magazine_footer_main_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:id="@+id/magazine_footer_sub_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:id="@+id/magazine_footer_page"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="70dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="right" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/footer_arrow_up_down" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/up_donw_select_move"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/footer_arrow_left_right"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/area_select"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/footer_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/back_pre_level"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/voice_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="130dp"
                    android:gravity="center_vertical"
                    android:text="@string/read_mute"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/footer_font_setting"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textfont_location_view"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/font_setting"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>