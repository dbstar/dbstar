<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
<RelativeLayout
        android:layout_width="1205dp"
        android:layout_height="548dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/content_bg" >
        <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/newspaper_up"
                android:layout_marginLeft="70dp"
                android:alpha="0.35"
                android:layout_marginTop="35dp"
            />
        <com.dbstar.multiple.media.widget.NewsPaperMainCategoryView
            android:id="@+id/category1"
            android:layout_width="150dp"
            android:layout_height="490dp"
            android:layout_marginTop="21dp"
            android:focusable="true"
            android:gravity="center"
            android:nextFocusDown="@null"
            android:nextFocusRight="@+id/category2"
            android:nextFocusUp="@null"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.35"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="#5D89D1"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.5"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="#5D89D1"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.68"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="#5D89D1"
                android:textSize="26dp" />

            <com.dbstar.multiple.media.widget.AlwaysMarqueeTextView
                android:layout_width="150dp"
                android:layout_height="64dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="33dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.68"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="#5D89D1"
                android:textSize="26dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.5"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="#5D89D1"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.35"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="#5D89D1"
                android:textSize="18dp" />
        </com.dbstar.multiple.media.widget.NewsPaperMainCategoryView>
             <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/newspaper_down"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="495dp"
                android:alpha="0.35"
            />
        <com.dbstar.multiple.media.widget.NewsPaperSubCategoryView
            android:id="@+id/category2"
            android:layout_width="200dp"
            android:layout_height="490dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="21dp"
            android:focusable="true"
            android:gravity="center"
            android:nextFocusDown="@null"
            android:nextFocusLeft="@+id/category1"
            android:nextFocusRight="@+id/newspaper_date_group"
            android:nextFocusUp="@null"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="96dp"
                android:layout_height="31dp"
                android:alpha="0.35"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:layout_marginTop="26dp"
                android:alpha="0.5"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="43dp"
                android:layout_marginTop="26dp"
                android:alpha="0.68"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="195dp"
                android:layout_height="77dp"
                android:layout_marginTop="26dp"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="43dp"
                android:layout_marginTop="26dp"
                android:alpha="0.68"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:layout_marginTop="26dp"
                android:alpha="0.5"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="96dp"
                android:layout_height="31dp"
                android:layout_marginTop="26dp"
                android:alpha="0.35"
                android:scaleType="fitXY" />
        </com.dbstar.multiple.media.widget.NewsPaperSubCategoryView>
        
        <RelativeLayout 
            android:layout_width="350dp"
            android:layout_height="490dp"
            android:layout_marginTop="21dp"
            android:id="@+id/newspaper_category_loading_view"
            android:visibility="invisible"
            >
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >
               <ProgressBar 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     style="?android:attr/progressBarStyleLarge"
                        android:layout_marginLeft="40dp"
                     android:indeterminateDrawable="@drawable/newspaper_loading_bg"
                    />  
                 <ProgressBar 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     style="?android:attr/progressBarStyleLarge"
                     android:layout_marginLeft="110dp"
                     android:indeterminateDrawable="@drawable/newspaper_loading_bg"
                    />
            </LinearLayout>
            
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="545dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="378dp" >
    
            <com.dbstar.multiple.media.widget.NewspaperDateView 
                android:id="@+id/newspaper_date_group"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.5dp"
                android:layout_marginTop="40dp" 
                android:focusable="true"
                >
                
                  <TextView
                    android:layout_width="37dp"
                    android:layout_height="114dp"
                    android:gravity="right|center_vertical"
                    android:textSize="15dp"
                    android:paddingRight="7dp"
                    android:textColor="#103286"
                    />
                <TextView
                    android:layout_width="37dp"
                    android:layout_height="114dp"
                    android:layout_marginTop="99dp"
                     android:textSize="15dp"
                    android:textColor="#103286"
                    android:paddingRight="2dp"
                    android:gravity="right|center_vertical"
                    />
                <TextView
                    android:layout_width="37dp"
                    android:layout_height="114dp"
                    android:layout_marginTop="196dp"
                    android:textSize="15dp"
                    android:textColor="#103286"
                    android:gravity="right|center_vertical"
                    android:paddingRight="2dp"
                    />
                
            </com.dbstar.multiple.media.widget.NewspaperDateView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.5dp"
                android:visibility="gone"
                  android:focusable="false"
                android:layout_marginTop="40dp" >

                <Button
                    android:focusable="false"
                    android:id="@+id/date_1"
                    android:layout_width="37dp"
                    android:layout_height="114dp"
                    android:gravity="right|center_vertical"
                    android:textSize="15dp"
                    android:paddingRight="7dp"
                    android:textColor="#103286"
                    android:background="@drawable/newspaper_date_btn_normal"
                    />

                <Button
                    android:id="@+id/date_2"
                    android:layout_width="37dp"
                    android:layout_height="114dp"
                    android:layout_marginTop="97dp"
                     android:textSize="15dp"
                    android:textColor="#103286"
                      android:focusable="false"
                    android:paddingRight="2dp"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/newspaper_date_btn_other_normal"
                    />

                <Button
                    android:id="@+id/date_3"
                    android:layout_width="37dp"
                    android:layout_height="114dp"
                    android:layout_marginTop="194dp"
                     android:textSize="15dp"
                    android:textColor="#103286"
                      android:focusable="false"
                    android:gravity="right|center_vertical"
                      android:paddingRight="2dp"
                    android:background="@drawable/newspaper_date_btn_other_normal"
                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/newspaper_pic"
                android:layout_width="345dp"
                android:layout_height="515dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/newspaper"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:paddingBottom="7dp"
                android:scaleType="fitXY" />
            <RelativeLayout
                android:id="@+id/newspaper_pic_loading_bar" 
                android:layout_width="345dp"
                android:layout_height="515dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                >
                <ProgressBar 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     style="?android:attr/progressBarStyleLarge"
                     android:indeterminateDrawable="@drawable/newspaper_loading_bg"
                    />
                
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="440dp"
            android:layout_height="545dp"
            android:layout_alignParentRight="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical" >

                <com.dbstar.multiple.media.widget.AlwaysMarqueeTextView
                    android:id="@+id/current_newspaper_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="130dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_marginLeft="20dp"
                    android:textColor="#0106b7"
                    android:textSize="28px"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/total_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20px" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20px" />
            </LinearLayout>
            
            <com.dbstar.multiple.media.widget.CustomListView 
                android:id="@+id/pagelist"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:layout_marginTop="100dp"
                android:divider="@null"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:fadeScrollbars="false" 
                android:scrollbarStyle="outsideInset"
                android:nextFocusLeft="@+id/newspaper_date_group"
                android:scrollbarThumbVertical="@drawable/newspaper_scrollbar_thumb"
                android:scrollbarTrackVertical="@drawable/newspaper_scrollbar_track"
                android:listSelector="@drawable/newspaper_page_item_selector_bg"
                ></com.dbstar.multiple.media.widget.CustomListView>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dbstar_toolbar_bg"
        android:orientation="horizontal"
        android:paddingLeft="60dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_icon_main" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="@string/newspaper"
                android:textColor="#fff"
                android:textSize="20dp" />
            
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />
               
               <TextView
                android:id="@+id/footer_main_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />
               
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />
               
               <TextView
                android:id="@+id/footer_sub_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />
                
             <!--   <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />
               
               <TextView
                android:id="@+id/footer_page"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="70dp"
                android:gravity="center_vertical"
                android:text="第07版"
                android:textColor="#fff"
                android:textSize="20dp" /> -->
               
           <LinearLayout 
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:gravity="right"
            > 
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_arrow_up_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/up_donw_select_move"
                android:textColor="#fff"
                android:textSize="20dp" />

        
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_arrow_left_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/left_right_type"
                android:textColor="#fff"
                android:textSize="20dp" />

              
              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_font_setting" />
             
              <TextView
                  android:id="@+id/operationview"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/one_key_collect"
                android:textColor="#fff"
                android:textSize="20dp" />
                  <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_ok" />
             
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="130dp"
                android:gravity="center_vertical"
                android:text="@string/okey_enter"
                android:textColor="#fff"
                android:textSize="20dp" />
              </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
