<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
<RelativeLayout
    
        android:layout_width="fill_parent"
        android:layout_height="548dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:background="@drawable/content_2_bg" >
        
      <ImageView
                android:id="@+id/page_pic"
                android:layout_width="345dp"
                android:layout_height="515dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/newspaper"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:paddingBottom="7dp"
                android:scaleType="fitXY" />
       <RelativeLayout
                android:id="@+id/page_pic_loading_bar" 
                android:layout_width="345dp"
                android:layout_height="515dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="9dp"
                android:gravity="center"
                >
                <ProgressBar 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     style="?android:attr/progressBarStyleLarge"
                    />
                
            </RelativeLayout>
      <LinearLayout 
          android:layout_width="738dp"
          android:layout_height="60dp"
          android:layout_marginLeft="403dp"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:background="@drawable/newspaper_editio_title_bg"
          >
          <TextView
              android:id="@+id/page_title" 
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_vertical|left"
              android:singleLine="true"
              android:textColor="#fff"
              android:textSize="30dp"
              android:textStyle="bold"
              android:paddingLeft="10dp"
              />
      </LinearLayout>
        <com.dbstar.multiple.media.widget.CustomListView 
                android:id="@+id/articletitlelist"
                android:layout_width="710dp"
                android:layout_height="440dp"
                android:cacheColorHint="#00000000"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="430dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:divider="@null"
                android:fadeScrollbars="false" 
                android:scrollbarStyle="outsideInset"
                android:scrollbarThumbVertical="@drawable/newspaper_scrollbar_thumb"
                android:scrollbarTrackVertical="@drawable/newspaper_scrollbar_track"
                android:listSelector="@drawable/newspaper_article_item_selector_bg"
                ></com.dbstar.multiple.media.widget.CustomListView> 
                
                 
                 <!--  <ListView 
	                android:id="@+id/articletitlelist"
	                android:layout_width="710dp"
	                android:layout_height="440dp"
	                android:cacheColorHint="#00000000"
	                android:paddingRight="20dp"
	                android:layout_marginTop="90dp"
                    android:layout_marginLeft="430dp"
                    android:layout_marginBottom="10dp"
	                android:divider="@null"
                    android:fadeScrollbars="false" 
                    android:scrollbarStyle="outsideInset"
                    android:scrollbarThumbVertical="@drawable/newspaper_scrollbar_thumb"
                    android:scrollbarTrackVertical="@drawable/newspaper_scrollbar_track"
                     ></ListView> -->
               
      
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dbstar_toolbar_bg"
        android:orientation="horizontal"
        android:paddingLeft="60dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_icon_main" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="@string/newspaper"
                android:textColor="#fff"
                android:textSize="20dp" />
            
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />
               
               <TextView
                android:id="@+id/footer_main_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />
               
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />
               
               <TextView
                android:id="@+id/footer_sub_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />
                
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />
               
               <TextView
                android:id="@+id/footer_page"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="70dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />
               
               
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_arrow_up_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/up_donw_select_title"
                android:textColor="#fff"
                android:textSize="20dp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_arrow_left_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/area_select"
                android:visibility="gone"
                android:textColor="#fff"
                android:textSize="20dp" />

             <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_back" />
             
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/back_pre_level"
                android:textColor="#fff"
                android:textSize="20dp" />
              
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_ok" />
             
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/read_detailed"
                android:textColor="#fff"
                android:textSize="20dp" />
              
             
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
