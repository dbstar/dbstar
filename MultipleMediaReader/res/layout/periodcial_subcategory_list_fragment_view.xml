<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/magazine_list_container"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/magazine_list_bk"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="45dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:alpha="0.35"
            android:background="@drawable/newspaper_up" />

        <com.dbstar.multiple.media.widget.MagazineSubSubCategoryView
            android:id="@+id/periodcial_subCategory_category"
            android:layout_width="200dp"
            android:layout_height="548dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:nextFocusDown="@null"
            android:nextFocusUp="@null"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="96dp"
                android:layout_height="0dp"
                android:alpha="0.35"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="115dp"
                android:layout_height="0dp"
                android:alpha="0.5"
                android:scaleType="fitXY" />
            
            <ImageView
                android:layout_width="112dp"
                android:layout_height="152dp"
                android:layout_marginTop="16dp"
                android:alpha="0.68"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="131dp"
                android:layout_height="178dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="112dp"
                android:layout_height="152dp"
                android:layout_marginTop="16dp"
                android:alpha="0.68"
                android:scaleType="fitXY" />
            
            <ImageView
                android:layout_width="115dp"
                android:layout_height="0dp"
                android:alpha="0.5"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="96dp"
                android:layout_height="0dp"
                android:alpha="0.35"
                android:scaleType="fitXY" />
        </com.dbstar.multiple.media.widget.MagazineSubSubCategoryView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="585dp"
            android:alpha="0.35"
            android:background="@drawable/newspaper_down" />


        <!--
        <ImageView
            android:id="@+id/periodcial_subCategory_fragment_category_indicator"
            android:layout_width="158dp"
            android:layout_height="496dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/category_bk" />
        <ImageView
            android:id="@+id/periodcial_subCategory_periodcial_pic"
            android:layout_width="580dp"
            android:layout_height="520dp"
            android:layout_toRightOf="@+id/periodcial_subCategory_fragment_category_indicator"
            android:paddingBottom="7dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="7dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/newspaper"
            android:scaleType="fitXY" />
        -->

        <RelativeLayout
            android:layout_width="900dp"
            android:layout_height="580dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="1dp" >

            <FrameLayout
                android:id="@+id/periodcial_subCategory_list_pageGroup"
                android:layout_width="900dp"
                android:layout_height="560dp"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/periodcial_subCategory_list_view1"
                    android:layout_width="900dp"
                    android:layout_height="560dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/periodcial_subCategory_list_view2"
                    android:layout_width="900dp"
                    android:layout_height="560dp"
                    android:scaleType="fitCenter" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/periodcial_subCategory_periodcial_pic_loading_bar"
            android:layout_width="680dp"
            android:layout_height="560dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="gone" >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/newspaper_loading_bg" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:background="@drawable/dbstar_toolbar_bg"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="60dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_icon_main" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="@string/periodcial"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:id="@+id/periodcial_subCategory_footer_main_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:id="@+id/periodcial_subCategory_footer_sub_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:id="@+id/periodcial_subCategory_footer_page"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="70dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="right" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/footer_arrow_up_down" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/periodcial_up_donw_select_move"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/footer_arrow_left_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/periodcial_left_right_type"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/footer_font_setting"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/operationview"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/one_key_collect"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/reader_ok" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="130dp"
                    android:gravity="center_vertical"
                    android:text="@string/periodcial_read_detailed"
                    android:textColor="#fff"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>