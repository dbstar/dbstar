<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="548dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="25dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/content_3_bg" >

        <ImageView
            android:id="@+id/article_pic"
            android:layout_width="345dp"
            android:layout_height="515dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/newspaper"
            android:paddingBottom="7dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="7dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/article_pic_loading_bar"
            android:layout_width="345dp"
            android:layout_height="515dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="15dp"
            android:gravity="center" >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:indeterminateDrawable="@drawable/newspaper_loading_bg"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="400dp"
            android:layout_marginRight="41dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.dbstar.multiple.media.widget.AlwaysMarqueeTextView
                android:id="@+id/article_title"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#1900D3"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/voice_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/voice_bg" />
        </LinearLayout>
        <RelativeLayout
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/parse_content_bar"
            android:layout_width="726dp"
            android:layout_height="400dp"
            android:layout_marginLeft="406dp"
            android:layout_marginTop="90dp"
            android:gravity="center" >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:indeterminateDrawable="@drawable/newspaper_loading_bg"
                android:layout_height="wrap_content" />
            
        </RelativeLayout>
    <!--     <ImageView 
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jiantou_up"
            android:background="@drawable/jiantou_up_press"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:layout_marginTop="85dp"
            />
         <ImageView 
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jiantou_down"
            android:background="@drawable/jiantou_down_press"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:layout_marginTop="505dp"
            /> -->
        <ScrollView
            android:id="@+id/scroll_content_view"
            android:layout_width="726dp"
            android:layout_height="405dp"
            android:layout_marginLeft="406dp"
            android:layout_marginTop="100dp"
             android:fadeScrollbars="false" 
            android:scrollbarThumbVertical="@drawable/newspaper_scrollbar_thumb"
             android:scrollbarTrackVertical="@drawable/newspaper_scrollbar_track"
             >
            <com.dbstar.multiple.media.widget.NewsPaperContentView
                 android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:id="@+id/contentView"
                android:layout_width="700dp"
                android:layout_height="0dp"
                 />
        </ScrollView> 
     <!--    <ImageView 
            android:visibility="invisible"
            android:layout_width="726dp"
            android:layout_height="1dp"
            android:layout_marginLeft="406dp"
            android:layout_marginTop="290dp"
            android:background="#ff0000"
            /> -->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dbstar_toolbar_bg"
        android:orientation="horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="60dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_icon_main" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="@string/newspaper"
                android:textColor="#fff"
                android:textSize="20dp" />
            
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />
               
               <TextView
                android:id="@+id/footer_main_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />
               
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />
               
               <TextView
                android:id="@+id/footer_sub_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />
                
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />
               
               <TextView
                android:id="@+id/footer_page"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="70dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />
               
               
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_arrow_up_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/up_donw_read"
                android:textColor="#fff"
                android:textSize="20dp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:src="@drawable/footer_arrow_left_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/area_select"
                android:visibility="gone"
                android:textColor="#fff"
                android:textSize="20dp" />

             <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_back" />
             
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/back_pre_level"
                android:textColor="#fff"
                android:textSize="20dp" />
              
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/voice_bg" />
             
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/read_mute"
                android:textColor="#fff"
                android:textSize="20dp" />
              
              <ImageView
                 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_font_setting" />
             
              <TextView
                android:id="@+id/textfont_location_view"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/font_setting"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>