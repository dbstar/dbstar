<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fcf="http://schemas.android.com/apk/res-auto"
    android:id="@+id/periodcial_main_fragment_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reader_view_background" >

    <RelativeLayout
        android:id="@+id/periodcial_main_fragment_view_header"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:focusable="false"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="187dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/dbstar_backgroud_logo" />

        <TextView
            android:id="@+id/periodcial_main_fragment_custom_service_hotline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:gravity="center_vertical"
            android:text="@string/hotline"
            android:textColor="#AEC3D8"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/periodcial_main_fragment_view_header"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:alpha="0.35"
            android:background="@drawable/newspaper_up" />

        <com.dbstar.multiple.media.widget.NewsPaperMainCategoryView
            android:id="@+id/periodcial_main_fragment_category"
            android:layout_width="158dp"
            android:layout_height="490dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="right|center_vertical"
            android:nextFocusDown="@null"
            android:nextFocusUp="@null"
            android:orientation="vertical"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.35"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#5D89D1"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.5"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#5D89D1"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.68"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#5D89D1"
                android:textSize="26dp" />

            <com.dbstar.multiple.media.widget.AlwaysMarqueeTextView
                android:layout_width="150dp"
                android:layout_height="64dp"
                android:layout_marginTop="30dp"
                android:ellipsize="marquee"
                android:gravity="right|center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="33dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.68"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#5D89D1"
                android:textSize="26dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.5"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#5D89D1"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:alpha="0.35"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#5D89D1"
                android:textSize="18dp" />
        </com.dbstar.multiple.media.widget.NewsPaperMainCategoryView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="495dp"
            android:alpha="0.35"
            android:background="@drawable/newspaper_down" />

        <ImageView
            android:id="@+id/periodcial_main_fragment_category_indicator"
            android:layout_width="158dp"
            android:layout_height="496dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/category_bk" />

        <RelativeLayout
            android:id="@+id/periodcial_main_fragment_shwoNoticeView"
            android:layout_width="650dp"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/periodcial_main_fragment_category"
            android:gravity="center"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/notice_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/periodcial_main_fragment_text_no_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/periodcial_text_no_magazine"
                    android:textColor="#fff"
                    android:textSize="24dp" />
            </LinearLayout>
        </RelativeLayout>

        <include
            android:id="@+id/shelf_group"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/periodcial_main_fragment_category"
            layout="@layout/book_view_group" />

        <com.dbstar.multiple.media.gallery.FancyCoverFlow
            android:id="@+id/periodcial_main_fragment_view_group"
            android:layout_width="900dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/periodcial_main_fragment_category"
            android:focusable="true"
            android:gravity="center"
            fcf:maxRotation="0"
            fcf:scaleDownGravity="0.5"
            fcf:unselectedAlpha="0.8"
            fcf:unselectedScale="0.8" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/dbstar_toolbar_bg"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="60dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/footer_icon_main" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="@string/periodcial"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:id="@+id/periodcial_footer_main_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_arrow_right" />

            <TextView
                android:id="@+id/periodcial_footer_sub_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="right" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/footer_arrow_up_down" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/periodcial_up_donw_select_type"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/footer_arrow_left_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/periodcial_left_right_select"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/footer_font_setting"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/periodcial_operationview"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/one_key_collect"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/reader_ok" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="130dp"
                    android:gravity="center_vertical"
                    android:text="@string/periodcial_ok_enter"
                    android:textColor="#fff"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>